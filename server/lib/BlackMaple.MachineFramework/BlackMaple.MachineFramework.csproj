<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>BlackMaple.MachineFramework</PackageId>
    <AssemblyName>BlackMaple.MachineFramework</AssemblyName>
    <VersionPrefix>8.2.0</VersionPrefix>

    <Title>SeedTactics Utility Library for MachineWatch Plugins</Title>
    <Company>Black Maple Software, LLC</Company>
    <Product>SeedTactics</Product>
    <Copyright>Black Maple Software, LLC</Copyright>
    <Authors>John Lenz</Authors>
    <PackageLicenseUrl>https://opensource.org/licenses/BSD-3-Clause</PackageLicenseUrl>
    <PackageProjectUrl>https://www.seedtactics.com</PackageProjectUrl>
    <RepositoryUrl>https://bitbucket.org/blackmaple/machinewatch</RepositoryUrl>
    <RepositoryType>hg</RepositoryType>
    <Description>
      Machine Watch is a generic conduit which allows SeedTactic software to monitor and control the cell.
      The communication between the MachineWatch server and the cell happens via a plugin, and
      this package implements some common code to help implement plugins.

      For documentation and source code, visit [the bitbucket project](https://bitbucket.org/blackmaple/machinewatch).
    </Description>

    <OutputType>Library</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="../BlackMaple.MachineWatchInterface/api/*.cs"/>
    <Compile Include="../BlackMaple.MachineWatchInterface/types/*.cs"/>
  </ItemGroup>

  <Choose>
      <When Condition="$(OS) == 'Unix'">
          <PropertyGroup>
              <TargetFramework>netstandard2.0</TargetFramework>
          </PropertyGroup>
      </When>

      <When Condition="$(OS) == 'Windows_NT'">
          <PropertyGroup>
              <TargetFrameworks>net461;netstandard2.0</TargetFrameworks>
          </PropertyGroup>
      </When>
  </Choose>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Formatters.Json" Version="2.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.WebSockets" Version="2.0.2"/>
    <PackageReference Include="Microsoft.Extensions.Configuration.Ini" Version="2.0.0"/>
    <PackageReference Include="NSwag.AspNetCore" Version="11.14.*"/>
    <PackageReference Include="Serilog" Version="2.6.0"/>
    <PackageReference Include="Serilog.Sinks.File" Version="4.0.0"/>
    <PackageReference Include="Serilog.Sinks.Console" Version="3.1.1"/>
    <PackageReference Include="Serilog.Formatting.Compact" Version="1.0.0"/>
    <PackageReference Include="Serilog.AspNetCore" Version="2.1.1"/>
    <PackageReference Include="System.Data.Common" Version="4.3.*" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="2.*" />
    <PackageReference Include="CsvHelper" Version="7.1.0"/>
  </ItemGroup>

  <Choose>
    <When Condition="$(TargetFramework) == 'net461'">
      <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Hosting.WindowsServices" Version="2.0.2" />
        <PackageReference Include="Serilog.Sinks.EventLog" Version="3.0.47"/>
        <Reference Include="System.Runtime.Remoting"/>
      </ItemGroup>
      <PropertyGroup>
        <DefineConstants>$(DefineConstants);SERVE_REMOTING;SERVICE_AVAIL</DefineConstants>
      </PropertyGroup>
    </When>
  </Choose>

  <ItemGroup Condition="$(Configuration) == 'release'">
    <!-- https://github.com/NuGet/Home/issues/4818 -->
    <Content Include="..\..\..\client\insight\build\**\*">
      <PackagePath Condition="'$(OS)' == 'Windows_NT'">content\wwwroot\</PackagePath>
      <PackagePath Condition="'$(OS)' != 'Windows_NT'">content/wwwroot/</PackagePath>
    </Content>
  </ItemGroup>
</Project>
