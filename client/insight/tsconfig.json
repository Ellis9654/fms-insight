{
  "compilerOptions": {
    "outDir": "build/dist",
    "baseUrl": "/",
    "module": "esnext",
    // "target": "es2016", https://github.com/parcel-bundler/parcel/issues/954
    "target": "es5",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",

    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    // only until https://github.com/facebook/immutable-js/issues/1540 is fixed
    "keyofStringsOnly": true
  },
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest"]
}
